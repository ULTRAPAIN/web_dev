<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To_do list </title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <div class="box" id="heading">
        <% if(current_day === "Monday"){ %>
            <h1 style="color:Red"> <%= current_day %> To Do List</h1>
        <% } else if(current_day==="Tuesday"){ %>
            <h1 style="color:Blue"> <%= current_day %> To Do List</h1>
        <% } else if(current_day==="Wednesday"){ %>
            <h1 style="color:Violet"> <%= current_day %> To Do List</h1>
        <% } else if(current_day==="Thursday"){ %>
            <h1 style="color:Pink"> <%= current_day %> To Do List</h1>
        <% } else if(current_day==="Friday"){ %>
            <h1 style="color:purple"> <%= current_day %> To Do List</h1>
        <% } else if(current_day==="Saturday"){ %>
            <h1 style="color:green"> <%= current_day %> To Do List</h1>
        <% } else { %>
            <h1 style="color:orange"> <%= current_day %> To Do List</h1>
        <% } %>
    </div>


    <div class="box">
            <% for (var i = 0; i <items.length; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= items[i] %></p> 
                </div>
           <% } %> 
           
           <form class="item" action="/" method="post">
        
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button">+</button>
    
        </form>
    </div>
    
</body>
</html>